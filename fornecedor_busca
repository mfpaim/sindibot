  <script>
    // WEBHOOKS
    const WEBHOOK_SEARCH = 'https://n8n.polenta.chat/webhook-test/buscar-fornecedor';
    const WEBHOOK_SAVE_REQUEST = 'https://n8n.polenta.chat/webhook-test/salvar-solicitacao';
    
    let currentFilter = 'todos';
    let expandedRegion = false;
    let lastSearchQuery = '';
    
    // Elements
    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('searchInput');
    const searchBtn = document.getElementById('searchBtn');
    const loading = document.getElementById('loading');
    const noResults = document.getElementById('noResults');
    const resultsContainer = document.getElementById('resultsContainer');
    const resultsList = document.getElementById('resultsList');
    const resultsCount = document.getElementById('resultsCount');
    const regionToggle = document.getElementById('regionToggle');
    const regionText = document.getElementById('regionText');
    const successBanner = document.getElementById('successBanner');
    
    // Filter chips
    document.querySelectorAll('.filter-chip').forEach(chip => {
      chip.addEventListener('click', function() {
        document.querySelectorAll('.filter-chip').forEach(c => c.classList.remove('active'));
        this.classList.add('active');
        currentFilter = this.dataset.filter;
      });
    });
    
    // Region toggle
    regionToggle.addEventListener('click', function() {
      expandedRegion = !expandedRegion;
      this.classList.toggle('active');
      
      if (expandedRegion) {
        regionText.textContent = 'üåç Buscar na regi√£o metropolitana';
      } else {
        regionText.textContent = 'üìç Buscar apenas na minha cidade';
      }
    });
    
    // Search form
    searchForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      await performSearch();
    });
    
    async function performSearch() {
      const query = searchInput.value.trim();
      if (!query) return;
      
      lastSearchQuery = query;
      
      // Hide all states
      loading.classList.remove('show');
      noResults.classList.remove('show');
      resultsContainer.classList.remove('show');
      successBanner.classList.remove('show');
      
      // Show loading
      loading.classList.add('show');
      searchBtn.disabled = true;
      searchBtn.textContent = 'Buscando...';
      
      try {
        const response = await fetch(WEBHOOK_SEARCH, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            query: query,
            filter: currentFilter,
            expandedRegion: expandedRegion,
            timestamp: new Date().toISOString()
          })
        });
        
        if (!response.ok) throw new Error('Erro na busca');
        
        const data = await response.json();
        
        loading.classList.remove('show');
        
        if (!data.fornecedores || data.fornecedores.length === 0) {
          document.getElementById('searchQuery').textContent = query;
          noResults.classList.add('show');
        } else {
          displayResults(data.fornecedores);
          resultsContainer.classList.add('show');
        }
        
      } catch (error) {
        console.error('Erro na busca:', error);
        loading.classList.remove('show');
        document.getElementById('searchQuery').textContent = query;
        noResults.classList.add('show');
      } finally {
        searchBtn.disabled = false;
        searchBtn.textContent = 'Buscar';
      }
    }
    
    function displayResults(fornecedores) {
      resultsCount.textContent = `${fornecedores.length} fornecedor${fornecedores.length !== 1 ? 'es' : ''} encontrado${fornecedores.length !== 1 ? 's' : ''}`;
      
      resultsList.innerHTML = fornecedores.map(f => `
        <div class="fornecedor-card">
          <div class="fornecedor-header">
            <div class="fornecedor-title">
              <div class="fornecedor-name">${f.nome || f.produtoServico}</div>
              <span class="fornecedor-category">${f.categoria}</span>
            </div>
            ${f.distancia ? `<div class="fornecedor-distance">üìç ${f.distancia}</div>` : ''}
          </div>
          
          <div class="fornecedor-info">
            <div class="info-row">
              <span class="info-icon">üè∑Ô∏è</span>
              <span>${f.produtoServico}</span>
            </div>
            <div class="info-row">
              <span class="info-icon">üìç</span>
              <span>${f.cidade}, ${f.estado}</span>
            </div>
            ${f.telefone ? `
            <div class="info-row">
              <span class="info-icon">üìû</span>
              <span>${f.telefone}</span>
            </div>
            ` : ''}
            ${f.nomeContato ? `
            <div class="info-row">
              <span class="info-icon">üë§</span>
              <span>${f.nomeContato}</span>
            </div>
            ` : ''}
          </div>
          
          <div class="fornecedor-actions">
            <button class="btn-contact" onclick="contactFornecedor('${f.telefone || ''}', '${f.nome || f.produtoServico}')">
              üìû Entrar em Contato
            </button>
            <button class="btn-details" onclick="showDetails('${f.id || ''}')">
              üìã Ver Detalhes
            </button>
          </div>
        </div>
      `).join('');
    }
    
    function contactFornecedor(telefone, nome) {
      if (telefone) {
        const cleanPhone = telefone.replace(/\D/g, '');
        const message = encodeURIComponent(`Ol√°! Encontrei seu contato atrav√©s do Sindi e gostaria de mais informa√ß√µes sobre seus servi√ßos.`);
        window.open(`https://wa.me/55${cleanPhone}?text=${message}`, '_blank');
      } else {
        alert('Telefone n√£o dispon√≠vel para este fornecedor.');
      }
    }
    
    function showDetails(id) {
      alert('Funcionalidade de detalhes em desenvolvimento. ID: ' + id);
    }
    
    // Save request when no results
    document.getElementById('saveRequestBtn').addEventListener('click', async function() {
      this.disabled = true;
      this.textContent = 'Salvando...';
      
      try {
        const response = await fetch(WEBHOOK_SAVE_REQUEST, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            query: lastSearchQuery,
            filter: currentFilter,
            expandedRegion: expandedRegion,
            timestamp: new Date().toISOString()
          })
        });
        
        if (!response.ok) throw new Error('Erro ao salvar');
        
        noResults.classList.remove('show');
        successBanner.classList.add('show');
        
        setTimeout(() => {
          successBanner.classList.remove('show');
        }, 5000);
        
      } catch (error) {
        console.error('Erro ao salvar:', error);
        alert('Erro ao salvar solicita√ß√£o. Tente novamente.');
      } finally {
        this.disabled = false;
        this.textContent = 'üíæ Salvar Solicita√ß√£o';
      }
    });
    
    // Save search
    document.getElementById('saveSearchBtn').addEventListener('click', function() {
      alert('Busca salva nos favoritos!');
    });
  </script>
</body>
</html>
